<div class="row add-btn">
  <div class="col-sm-2 col-sm-offset-5">
    <a href="/words/new"><button type="button" class="btn btn-primary btn-lg">Add a Word</button></a>
  </div>
</div>

<div class="row">
  <% @words.each() do |word|%>
    <div class="col-sm-4 thumbnail">
      <p><%= word.word() %><a href="/words/<%= word.id() %>" class="btn btn-warning pull-right">View</a></p>

    </div>
  <% end %>
</div>
