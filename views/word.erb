<h1><%= @word.word() %></h1>
<h3><em>-<%= @word.part_of_speech() %></em></h3>
<ol class="list-group">
  <% @word.definitions().each() do |definition| %>
  <li class="list-group-item"><%= definition.definition() %></li>
  <% end %>
</ol>

<p>
  <a href="/words/<%= @word.id%>/definitions/new"><button type="button" class="btn btn-primary">Add a Definition</button></a>
  <a href="/"><button type="button" class="btn btn-default">Home</button></a>
</p>
