<h1>Add a Word</h1>

<div class="row">
  <div class="col-sm-6">
    <form action="/words" method="post" class="well">
      <div class="form-group">
        <label for="word">Enter your new word for the dictionary:</label>
        <input type="text" name="word" id="word" class="form-control">
      </div>
      <div class="form-group">
        <label for="part_of_speech">Enter the part of speech:</label>
        <input type="text" name="part_of_speech" id="part_of_speech" class="form-control">
      </div>

      <button type="submit" id="submit" class="btn btn-success">Add Word</button>
    </form>
  </div>
</div>

<button type="button" class="btn btn-default"><a href="/">Back</a></button>
